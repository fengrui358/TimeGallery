@{
    ViewBag.Title = "上传";
    Layout = "../Shared/_GalleryLayout.cshtml";
}

<span id="data-container" data-galleryId="@ViewBag.Gallery.GalleryId"></span>
<div class="container">
    <div class="text-left col-md-12 wrapper">
        <h1 class="text-left col-md-12 ">
            上传页面
        </h1>
    </div>
    <div class="body">
        <div class="col-md-12">
            <div id="container">
                <a class="btn btn-default btn-lg " id="pickfiles" href="#">
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>选择文件</span>
                </a>
            </div>
        </div>

        <div style="display: none" id="success" class="col-md-12">
            <div class="alert-success">
                队列全部文件处理完毕
            </div>
        </div>
        <div class="col-md-12 ">
            <table class="table table-striped table-hover text-left" style="margin-top: 40px; display: none">
                <thead>
                <tr>
                    <th class="col-md-4">Filename</th>
                    <th class="col-md-2">Size</th>
                    <th class="col-md-6">Detail</th>
                </tr>
                </thead>
                <tbody id="fsUploadProgress"></tbody>
            </table>
        </div>
    </div>
</div>
    @section footerScripts
    {
        @Scripts.Render("~/Scripts/plupload/moxie.min.js")
        @Scripts.Render("~/bundles/plupload")
        @Scripts.Render("~/bundles/qiniu")
        @Scripts.Render("~/Scripts/Gallery/Upload.js")
    }