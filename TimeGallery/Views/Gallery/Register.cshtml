
@{
    ViewBag.Title = "注册相册";
    Layout = "../Shared/_GalleryLayout.cshtml";
}

<div id="registerContainer">
    <h1 class="page-title">注册相册</h1>
    <div class="weui_cells_title">基本信息</div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd">
                <label class="weui_label">相册名称</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
                <input id="galleryName" class="weui_input" type="text" placeholder="请输入相册名">
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd">
                <label class="weui_label">相册封面</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
                <div class="weui_uploader_input_wrp">
                    <input class="weui_uploader_input" type="file" accept="image/jpg,image/jpeg,image/png,image/gif"/>
                </div>
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd">
                <label class="weui_label">相册描述</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
                <textarea id="galleryDescription" class="weui_textarea" placeholder="请输入相册描述" rows="3"></textarea>
                <div class="weui_textarea_counter"><span>0</span>/200
                </div>
            </div>
        </div>
    </div>
    <div class="weui_cells_tips">完善附加信息可方便我们更好的为您服务</div>
    <div class="weui_btn_area">
        <a id="registerSubmit" class="weui_btn weui_btn_primary">确定</a>
    </div>
</div>

<div class="weui_msg" hidden>
    <div class="weui_icon_area">
        <i class="weui_icon_success weui_icon_msg"></i>
    </div>
    <div class="weui_text_area">
        <h2 class="weui_msg_title">操作成功</h2>
        <p class="weui_msg_desc"></p>
    </div>
    <div class="weui_opr_area">
        <p class="weui_btn_area">
            @Html.ActionLink("确定", "Upload", null, new {@class = "weui_btn weui_btn_primary" })            
            <a class="weui_btn weui_btn_default">取消</a>
        </p>
    </div>
    @*<div class="weui_extra_area">
        <a>查看详情</a>
    </div>*@
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/Gallery/Register.js")
}
