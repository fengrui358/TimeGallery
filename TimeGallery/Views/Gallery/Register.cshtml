
@{
    ViewBag.Title = "注册相册";
    Layout = "../Shared/_GalleryLayout.cshtml";
}

<div>    
    <div class="weui_cells weui_cells_form">
        <div class="weui_cells_title">基本信息</div>
        <div class="weui_cell">
            <div class="weui_cell_hd">
                <label class="weui_label">相册名</label>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" placeholder="请输入相册名">
            </div>
        </div>
        <div class="weui_cells_title">附加信息</div>
        <div class="weui_cells_title">相册描述</div>
        <div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <textarea class="weui_textarea" placeholder="请输入相册描述" rows="3"></textarea>
                    <div class="weui_textarea_counter"><span>0</span>/200</div>
                </div>
            </div>
        </div>
    </div>    
    <div class="weui_cells_tips">完善附加信息可方便我们更好的为您服务</div>
</div>
